<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>
<body>

<img src="public/images/Beer-right4.PNG" alt="">
    <form action="/drinks" method="GET">

  <nav>
    <%- include('../partials/header') %>
  </nav>
  <div class="container">    <form action="/drinks" method="GET">

    <label for="Type Selector">Type:</label>
    <select name="type" >
        <option value="All">All</option>
        <option value="Beer">Beer</option>
        <option value="Wine">Wine</option>
        <option value="Spirits">Spirits</option>
        <option value="Other">Other</option>
    </select>
    <input type="submit" id="type-filter">   
    </form>

 


    <div class="products">
      <% drinks.forEach((drink)=>{ %>
        <section>
          <h3><a href="/drinks/<%=drink._id%>">
              <%=drink.name%>
            </a></h3>
          <% if (drink.img) { %>
            <h4><a href="/drinks/<%=drink._id%>"><img src="<%= drink.img%>" alt="Drink image"></a></h4>
            <% } %>
        </section>
        <% }) %>
    </div>
  </div>


 
</body>

</html>